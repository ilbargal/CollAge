# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Assets.at(path="/public", file="index.html")
GET     /getAllEvents                   controllers.ActivitiesController.getAllActivities()
GET     /getAllEvents/:mail             controllers.ActivitiesController.GetRecommendedActivities(mail: String)
GET     /getEvent/:id                   controllers.ActivitiesController.getActivity(id: String)
GET     /getUsers                       controllers.MainController.getUsers()
GET     /getUser/:mail                  controllers.UsersController.getUser(mail: String)
POST    /addActivity                    controllers.ActivitiesController.addActivity()
POST    /saveEventStatus                controllers.ActivitiesController.saveEventStatus()
#POST    /person                        controllers.Application.addPerson()
#GET     /persons                       controllers.Application.getPersons

# Activities

# Categories:
GET     /getAllCategories               controllers.CategoriesController.getAllCategories()
GET     /getUserCategories/:email        controllers.CategoriesController.getUserCategories(email: String)

# Map static resources from the /public folder to the /assets URL path
GET     /*file                          controllers.Assets.at(path="/public", file)

# Users:
# Sign Up page:
POST     /saveUser                     controllers.UsersController.saveUser()
POST     /updateUser                   controllers.UsersController.updateUser()
POST     /signupUser                   controllers.UsersController.insertNewUser(email: String, password: String)
# Sign In page:
#POST     /signin                       controllers.UsersController.signin()
